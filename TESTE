#include <stdlib.h>
#include <stdio.h>
#include <string.h>
#define MAX 100

int main(void)
{
	//pede pro usuario escolher que linha ele quer trocar por qual
	char X[MAX][MAX],Y[MAX];
	int rows, cols, change;
	
	printf("Quantas linhas queres? ");
	scanf("%d", &rows);
	printf("Quantas colunas queres? ");
	scanf("%d", &cols);

	for(int j=0;j<cols;j++)
	{
		for(int i=0;i<rows;i++)
		{
			X[i][j] = cols-i;
			printf("%d", X[i][j]);
		}
	printf("\n");
	}
	
	do{
		printf("Que linha voce quer organizar em ordem crescente? ");
		scanf("%d", &change);
	}while(change>=rows);
	printf("\n\n");
	
	for(int j=0;j<cols;j++)
	{
		if(X[change][j]>X[change][j+1])
		{
			Y[j]=X[change][j];
			X[change][j]=X[change][j+1];
			X[change][j+1]=Y[j];
		}
	}

	return 0;
}
